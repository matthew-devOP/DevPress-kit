{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug (Docker)",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "log": true,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}"
            },
            "hostname": "0.0.0.0",
            "xdebugSettings": {
                "max_data": 65535,
                "max_children": 100,
                "max_depth": 5
            }
        },
        {
            "name": "Listen for Xdebug (Legacy Port)",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "log": true,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}"
            },
            "hostname": "0.0.0.0",
            "xdebugSettings": {
                "max_data": 65535,
                "max_children": 100,
                "max_depth": 5
            }
        },
        {
            "name": "Debug current script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "port": 9003,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=9003"
            }
        },
        {
            "name": "Debug WordPress with Docker",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "log": true,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}",
                "/var/www/html/wp-content": "${workspaceFolder}/wp-content",
                "/var/www/html/wp-content/themes": "${workspaceFolder}/wp-content/themes",
                "/var/www/html/wp-content/plugins": "${workspaceFolder}/wp-content/plugins"
            },
            "hostname": "0.0.0.0",
            "ignore": [
                "**/vendor/**/*.php"
            ],
            "xdebugSettings": {
                "max_data": 65535,
                "max_children": 100,
                "max_depth": 5,
                "show_hidden": 1
            }
        },
        {
            "name": "Launch built-in web server",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes",
                "-S",
                "localhost:8000"
            ],
            "program": "",
            "cwd": "${workspaceRoot}",
            "port": 9003,
            "serverReadyAction": {
                "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        }
    ]
}
